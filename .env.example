# EchoGrid API Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/echogrid

# Africa's Talking API Credentials
# Get these from https://account.africastalking.com/
AT_API_KEY=your_africastalking_api_key_here
AT_USERNAME=your_africastalking_username_here

# JWT Secret for authentication (generate a secure random string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_32_character_minimum_jwt_secret_here

# Optional: USSD Service Code (if you have one registered)
USSD_CODE=*123#

# Optional: SMS Sender ID
SMS_SENDER_ID=EchoGrid

# Optional: Redis for caching and real-time features
REDIS_URL=redis://localhost:6379

# Optional: File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Optional: Webhook URLs for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook
