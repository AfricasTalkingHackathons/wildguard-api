# WildGuard Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Production PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/wildguard_prod"

# Africa's Talking API Configuration
AT_API_KEY="your_production_api_key_here"
AT_USERNAME="your_production_username_here"

# JWT Configuration
# JWT Secret for authentication (MUST be different from development)
JWT_SECRET=1f4861391fb79b69f9fa4dbe2107a7fe7fcc6c39b40601c817061b260a6ba860afddc7d0c98e47a28a6d364a6421f09621cd77e538df17d4d61209ddb6b89bd9
JWT_EXPIRES_IN="24h"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # 100 requests per window

# CORS Configuration
CORS_ORIGIN="https://your-frontend-domain.com,https://admin.your-domain.com"

# Logging Configuration
LOG_LEVEL="info"

# Night Guard Configuration
NIGHT_GUARD_ENABLED=true
NIGHT_GUARD_START_HOUR=18  # 6 PM
NIGHT_GUARD_END_HOUR=6     # 6 AM
NIGHT_GUARD_SENSITIVITY="high"

# AI/ML Configuration
THREAT_ANALYSIS_ENABLED=true
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# SMS Configuration
SMS_SENDER_ID="WildGuard"
ENABLE_SMS_NOTIFICATIONS=true

# Monitoring & Health Check
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
ENABLE_METRICS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,audio/mpeg,audio/wav"

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="your_session_secret_here_change_this_in_production"

# External Services
WEATHER_API_KEY="your_weather_api_key_here"
GEOLOCATION_API_KEY="your_geolocation_api_key_here"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30