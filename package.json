{
  "name": "wildguard-api",
  "version": "1.0.0",
  "description": "WildGuard - Unified conservation intelligence platform for Africa",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:production": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "jwt:test": "tsx scripts/test-jwt.ts",
    "secrets:generate": "node scripts/generate-secrets.js",
    "prepare:production": "npm run build && npm run test:production",
    "deploy:check": "npm run lint && npm run build && npm run test:production",
    "health:check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "conservation",
    "wildlife",
    "africa",
    "iot",
    "mobile",
    "sms"
  ],
  "author": "EchoGrid Team",
  "license": "MIT",
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "africastalking": "^0.6.1",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "sharp": "^0.32.5",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/africastalking": "^0.6.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.7",
    "@types/node-cron": "^3.0.8",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.4",
    "drizzle-kit": "^0.19.13",
    "jest": "^29.6.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
